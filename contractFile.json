{
  "consumer": {
    "name": "EmployerServiceAPI"
  },
  "interactions": [
    {
      "description": "get employee by emp id which exists",
      "providerStates": [
        {
          "name": "emp id exists"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/employee/1"
      },
      "response": {
        "body": {
          "age": 78,
          "department": "HR",
          "designation": "Manager",
          "email": "a@a.com",
          "empId": 1,
          "id": 1,
          "name": "Akash",
          "phone": "342424",
          "salary": "100"
        },
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "matchingRules": {
          "body": {
            "$.age": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "integer"
                }
              ]
            },
            "$.department": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.designation": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.email": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.empId": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "integer"
                }
              ]
            },
            "$.id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "integer"
                }
              ]
            },
            "$.name": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.phone": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.salary": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          }
        },
        "status": 200
      }
    },
